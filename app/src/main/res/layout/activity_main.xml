<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guideapp.guideapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_marginBottom="0dp"
                android:background="#FFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="#000"
                        android:text="Карта"
                        android:id="@+id/action_bar_text"
                        android:textSize="21sp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <Button
                        android:background="@drawable/ic_search_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/choose_place"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <Button
                        android:background="@drawable/ic_format_line_spacing_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="90dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/show_places"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />


                </RelativeLayout>

            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/bg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="120">

        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:id="@+id/fg_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="#FFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--Карта-->
                    <LinearLayout
                        android:id="@+id/map_cont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/map_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_map_black_24dp"
                            android:tint="#000" />


                    </LinearLayout>

                    <!--Мои места-->
                    <LinearLayout
                        android:id="@+id/place_cont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/place_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_place_black_24dp"
                            android:tint="#6E6E6E" />


                    </LinearLayout>

                    <!--Фото-->
                    <LinearLayout
                        android:id="@+id/gallery_cont"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/gallery_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_photo_library_black_24dp"
                            android:tint="#6E6E6E" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.design.widget.AppBarLayout>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/place_hint_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
