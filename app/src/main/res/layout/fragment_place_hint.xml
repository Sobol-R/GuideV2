<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guideapp.guideapp.PlaceHintFragment">

    <RelativeLayout
        android:layout_marginTop="65dp"
        android:id="@+id/place_hint_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/place_hint"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/place_hint_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="7dp"
                android:id="@+id/place_name"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:text="Название Места"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="3dp"
                android:id="@+id/place_rating"
                android:layout_below="@id/place_name"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:text="Рейтинг: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="3dp"
                android:id="@+id/place_type"
                android:layout_below="@id/place_rating"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:text="Тип:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="3dp"
                android:id="@+id/place_open"
                android:layout_below="@id/place_type"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:text="Открыто:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
